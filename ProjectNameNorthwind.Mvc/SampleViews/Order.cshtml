
@{
    ViewBag.Title = "Order Index";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div id = "list">
        <h2 style = "text-align:center">Order List</h2>
      <a href = "#" onclick="showedit(-1, true)">Add new item</a>
      <table class="table input-sm">
            <thead id = "listhead">
                <tr>
					<th valign="top">
						Id
					</th>
					<th valign="top">
						Order Date
					</th>
					<th valign="top">
						Order Number
					</th>
					<th valign="top">
						Customer Id
					</th>
					<th valign="top">
						Total Amount
					</th>
                  <th></th>
                </tr>
            </thead>
            <tbody id="listbody"></tbody>
        </table>
        <ul class="pagination">
        </ul>
    </div>
    <br />
  <div id="edit" >
        <h2 style = "text-align:center" id="formcaption">Edit Form</h2>
        <form role="form" class="form-horizontal" id="editDetailForm" name="editDetailForm" >
            <label hidden id="hiddenid" class="col-lg-12"></label>
            <div class="col-sm-12" >
                <div class="form-group form-group-sm" >
                    <label class="col-sm-3 control-label" ></label>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Id" class="col-sm-3 control-label">Id</label>
                    <div class="col-sm-9">
                        <input type="text" id="Id" name="Id" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "OrderDate" class="col-sm-3 control-label">OrderDate</label>
                    <div class="col-sm-9">
                        <input type="text" id="OrderDate" name="OrderDate" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "OrderNumber" class="col-sm-3 control-label">OrderNumber</label>
                    <div class="col-sm-9">
                        <input type="text" id="OrderNumber" name="OrderNumber" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "CustomerId" class="col-sm-3 control-label">CustomerId</label>
                    <div class="col-sm-9">
                        <input type="text" id="CustomerId" name="CustomerId" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "TotalAmount" class="col-sm-3 control-label">TotalAmount</label>
                    <div class="col-sm-9">
                        <input type="text" id="TotalAmount" name="TotalAmount" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <a href = '#' onclick='update()' id="updatebtn"> Update</a>
                        <a href = '#' onclick='canceledit()'>Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
        
</div>

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js" ></script>
<script src = "@Url.Content("~/SampleScripts/Order.js")" type= "text/javascript" ></script>

